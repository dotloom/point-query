{
  "$schema": "http://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "target":           "es6",
    "module":           "commonjs",
    "removeComments":   true,
    "sourceMap":        true,
    "allowJs":          true,
    "esModuleInterop":  true,
    "outDir":           "build",
    "lib":              [ "es6", "es2015.promise", "dom" ],
    "rootDir":          "ts"
  },
  "exclude": [
    "build",
    "ts_test"
  ]
}